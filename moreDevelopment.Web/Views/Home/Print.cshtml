@model moreDevelopment.ViewModel.createInvoiceViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<style>
    .text-centered{
        text-align:center;
    }
    .invoices {
        padding-top:65px ;
    }
    .invoice-1 {
        float: left;
        width:340px;
        height:567px;
        margin-left: 5px;
    }
    .invoice-1 .person-name {
        width: 130px;
        height:26px;
        font-size: 11px;
    }
    .invoice-1 .person-adress {
        height:55px;
        width: 140px;
        font-size: 11px;
    }
    .invoice-1 .createDate {
        margin-top:68px;
        margin-left: 68px;
        width:65px;
        height:13px;
        font-size: 13px;
    }
    .invoice-1 .sendDate {
        width: 65px;
        height: 13px;
        margin-left: 68px;
        font-size: 13px;
    }
    .invoice-1 .products {
        padding-top:50px;
        height:400px;
        margin-right:5px;
        font-size: 12px;
    }
    
    .invoice-1 .products .productName {
        text-align: left;
        width: 255px;
    }
    .invoice-1 .products .productCount {
        text-align: left;
        width: 15px;
    }
    .invoice-1 .products .productPrice {
        text-align: left;
        width: 50px;
    }
    .invoice-1 .productTotals {
        padding-top: 30px;
        margin-left: 180px;
        font-size: 13px;
    }
        .invoice-1 .productTotalText
        {
            margin-left:30px;
            padding-top:30px;
            font-size:14px;
        }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Print</title>
    
    <!-- App css -->
</head>

<body>

    <div class="container">

        <div class="invoices">
            @for (int i = 0; i < 4; i++)
            {
                <div class="invoice-1">
                    <div class="person-name">
                        @Model.buyerName @Model.buyerSurname
                    </div>
                    <div class="person-adress">
                        @Model.buyerAdress
                    </div>
                    <div class="createDate">
                        @(Model.createDate.Day).@(Model.createDate.Month).@(Model.createDate.Year)
                    </div>
                    <div class="sendDate">
                        @(Model.createDate.Day).@(Model.createDate.Month).@(Model.createDate.Year)
                    </div>
                    <div class="products">
                        <table>
                            <tr>
                                <th class="productName"></th>
                                <th class="productCount"></th>
                                <th class="productPrice"></th>
                            </tr>
                            @foreach (var item in Model.productList.productList)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td class="text-centered">@item.count</td>
                                    <td class="text-centered">@item.price.ToString("#.##")</td>
                                </tr>

                            }

                        </table>
                    </div>
                    <div class="productTotals">
                        <div class="total">Toplam : @Model.price</div>
                        <div class="tax">KDV %@Model.taxRate : @Model.taxPrice.ToString("#.##")</div>
                        @if (Model.taxRate2 != 0)
                        {
                            <div class="tax">KDV %@Model.taxRate2 : @Model.taxPrice2.ToString("#.##")</div>
                        }
                        <div class="total">Genel Toplam : @Model.grandTotal.ToString("#.##")</div>
                    </div>
                    <div class="productTotalText">
                        <div>@Model.totalPriceText</div>
                    </div>
                </div>
            }


        </div>
       
    </div>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/jquery.slimscroll.js"></script>

    <!-- App js -->
    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

</body>
</html>
